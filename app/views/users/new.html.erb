<%= stylesheet_link_tag "specific_selectors.css" %>
<%= stylesheet_link_tag "css_reset.css" %>

<body class="signup">

  <div class="row">
   <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
     <div class="control-label col-sm-2">
      <%= f.label :username %>
     </div>
     <div class="col-sm-6">
      <%= f.text_field :username, class: "form-control", placeholder: "Your Username", autofocus: true %>
     </div>
    </div>
    <div class="form-group">
     <div class="control-label col-sm-2">
      <%= f.label :email %>
     </div>
     <div class="col-sm-6">
      <%= f.text_area :email, rows: 1, class: "form-control", placeholder: "Email Adress" %>
     </div>
    </div>
    <div class="form-group">
     <div class="control-label col-sm-2">
      <%= f.label :password %>
     </div>
     <div class="col-sm-6">
      <%= f.text_area :password_digest, rows: 1, class: "form-control", placeholder: "Your Password" %>
     </div>
    </div>
    <div class="form-group">
     <div class="col-sm-offset-2 col-sm-10">
       <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
     </div>
    </div>
  <% end %>
  <%= link_to 'Back', articles_path %>
   </div>
  </div>



  <%= render 'shared/errors', obj: @user %>
</body>
